{
  "manifest_version": 3,
  "name": "Sales Extension",
  "version": "1.0.0",
  "description": "AI-powered assistant for generating cold emails, LinkedIn messages, and personalized sales content",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Click to open Sales Extension"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "sidePanel",
    "identity"
  ],
  "oauth2": {
    "client_id": "459550601924-gipbi7dun46a0np5mvhrmodmnrq0o0uc.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
